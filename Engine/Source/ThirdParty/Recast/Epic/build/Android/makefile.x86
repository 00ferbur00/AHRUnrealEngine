all: librecast_x86.a

librecast_x86.a: $(OBJS)
	$(AR_RC) $@  $(OBJS)
	$(RANLIB) $@
	cp librecast_x86.a ./Epic/lib/Android/x86/librecast.a
	$(RM_F) *.o */*.o */Source/*.o librecast_x86.a

clean:
	$(RM_F) *.o */*.o */Source/*.o librecast_x86.a
