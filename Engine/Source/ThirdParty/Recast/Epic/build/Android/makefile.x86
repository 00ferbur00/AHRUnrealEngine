TOOLCHAIN=/cygdrive/c/android/android-ndk-r9d/toolchains
CC=$(TOOLCHAIN)/llvm-3.3/prebuilt/windows-x86_64/bin/clang.exe
AR_RC=$(TOOLCHAIN)/x86-4.8/prebuilt/windows-x86_64/bin/i686-linux-android-ar.exe rc
RANLIB=$(TOOLCHAIN)/x86-4.8/prebuilt/windows-x86_64/bin/i686-linux-android-ranlib.exe
RM_F=rm -f
CPP=$(TOOLCHAIN)/llvm-3.3/prebuilt/windows-x86_64/bin/clang++.exe
CXX=$(TOOLCHAIN)/llvm-3.3/prebuilt/windows-x86_64/bin/clang++.exe

STDLIBDIR="C:\\android\\android-ndk-r9d\\platforms\\android-19\\arch-x86\\usr\\include"
STLLIBDIR="C:\\android\\android-ndk-r9d\\sources\\cxx-stl\\llvm-libc++\\libcxx\\include"

CXXFLAGS= -target i686-none-linux-android -g -O3 -I$(STDLIBDIR) -I$(STLLIBDIR) -ffunction-sections -funwind-tables -fstack-protector -fno-strict-aliasing -fno-exceptions -fno-rtti -fno-short-enums -fpic -march=atom  -x c++ -std=c++11
CPPFLAGS= -IDetour/Include -IDetourCrowd/Include -IDetourTileCache/Include -IRecastDemo/Include -IRecast/Include

OBJS = Detour/Source/DetourAlloc.o \
	Detour/Source/DetourCommon.o \
